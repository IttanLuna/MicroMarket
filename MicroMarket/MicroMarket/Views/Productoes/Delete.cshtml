@model MicroMarket.Models.Producto

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>¿Estás seguro de que quieres borrar?</h3>
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StockMinimo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StockMinimo)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StockMaximo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StockMaximo)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoProducto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoProducto)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaVencimiento)
        </dt>
        <dd class="col-sm-10">
            @if (Model.FechaVencimiento.HasValue)
            {
                @Model.FechaVencimiento.Value.ToString("yyyy-MM-dd")
            }
            else
            {
                <em>Sin fecha de vencimiento</em>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UrlFoto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UrlFoto)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductoId" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-success shadow-sm" >Volver</a>
    </form>
</div>

